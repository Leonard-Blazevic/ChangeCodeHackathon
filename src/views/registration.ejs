<html>

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-route.js"></script>
    <script src="../js/app.js"></script>
    <script src="../js/registrationController.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb"
        crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body ng-app="myApp">
    <div class="intro-text">
        Please register for the ChangeCode Hackathon.
    </div>
    <form ng-controller="registrationController as vm" id="registration" name="registration" class="registration-form">
        <div class="form-group">
            <label>Team Name</label>
            <input ng-model="vm.data.Teamname" required type="text" class="form-control" id="teamname" placeholder="Enter team name.">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input ng-model="vm.data.Password" required type="password" class="form-control" id="password" placeholder="Enter password.">
        </div>
        <div ng-repeat="member in [0,1,2,3]" class="form-group top-margin">
            <label>Member {{member+1}}</label>
            <input ng-model="vm.data.Members[member].name" required type="text" class="form-control" placeholder="Enter name.">
            <input ng-model="vm.data.Members[member].surname" required type="text" class="form-control" placeholder="Enter surname.">
            <input ng-model="vm.data.Members[member].mail" required type="email" class="form-control" placeholder="Enter email.">
        </div>

        <button ng-click="vm.submit()" class="btn btn-primary registratio-button">Register</button>
    </form>
</body>

</html>